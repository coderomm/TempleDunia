@model templedunia.Models.TempleListing

@{
    ViewBag.Title = "Edit Temple";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Forms</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Form Layouts</li>
                    </ol>
                </nav>
            </div>
        </div>
        <!--end breadcrumb-->

        <div class="row">
            <div class="col-lg-12">
                <h6 class="mb-0 text-uppercase">Update Temple & Details</h6>
                <hr>
                <div class="card border-top border-0 border-4 border-danger">
                    <div class="card-body p-5">
                        <div class="card-title d-flex align-items-center">

                            <h5 class="mb-0 text-danger">Update Temple & Details</h5>
                        </div>
                        <hr>
                        @using (Html.BeginForm("EditTemple", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "row g-3" }))
                        {
                            @Html.AntiForgeryToken()

                            <input name="rts" value="@Model.rts" hidden />
                            <input name="status" value="true" hidden />

                            <div class="col-lg-4 col-sm-4 col-12">
                                <label class="form-label">State</label>
                                @Html.DropDownListFor(m => m.sid, ViewBag.StateList as SelectList, "Select State", new { @class = "search-fields form-control  py-0", required = "required" })
                                @Html.ValidationMessage("sid", "", new { @class = "text-danger" })
                            </div>

                            <div class="col-lg-4 col-sm-4 col-12">
                                <label class="form-label">District</label>
                                @Html.DropDownListFor(m => m.did, ViewBag.DistrictList as SelectList, "Select District", new { @class = "search-fields form-control  py-0", required = "required" })
                                @Html.ValidationMessage("did", "", new { @class = "text-danger" })
                            </div>

                            <div class="col-lg-4 col-sm-4 col-12">
                                <label class="form-label">City</label>
                                @Html.DropDownListFor(m => m.cid, ViewBag.TehsileList as SelectList, "Select City", new { @class = "search-fields form-control  py-0", required = "required" })
                                @Html.ValidationMessage("cid", "", new { @class = "text-danger" })
                            </div>

                            <div class="col-lg-12 col-12">
                                <label for="name" class="form-label">Temple Name</label>
                                <div class="input-group">
                                    <input name="name" type="text" class="form-control" value="@Model.name" placeholder="Temple Name">
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <label for="pdetails" class="form-label">Temple About Section</label>
                                <textarea name="detail" class="form-control" value="@Model.detail" placeholder="Enter About Temple" rows="3">@Model.detail</textarea>
                            </div>
                            
                            <div class="col-lg-4">
                                <label for="image1" class="form-label">Temple Image 1</label>
                                <div class="input-group">
                                    <input name="image1" class="form-control" type="file" value="@Model.image1">
                                    <input name="image1" value="@Model.image1">
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <label for="image2" class="form-label">Temple Image 2</label>
                                <div class="input-group">
                                    <input name="image2" class="form-control" type="file" value="@Model.image2">
                                    <input name="image2" value="@Model.image2">
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <label for="image3" class="form-label">Temple Image 3</label>
                                <div class="input-group">
                                    <input name="image3" class="form-control" type="file" value="@Model.image3">
                                    <input name="image3" value="@Model.image3">
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <label for="image3" class="form-label">Temple Image 4</label>
                                <div class="input-group">
                                    <input name="image4" class="form-control" type="file" value="@Model.image4">
                                    <input name="image4" value="@Model.image4">
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <label for="seoTitle" class="form-label">SEO Title</label>
                                <div class="input-group">
                                    <input name="seoTitle" type="text" class="form-control" value="@Model.seoTitle" placeholder="Temple Name">
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <label for="seoKeyword" class="form-label">SEO Keyword</label>
                                <textarea name="seoKeyword" class="form-control" value="@Model.seoKeyword" placeholder="Enter About Temple" rows="3">@Model.seoKeyword</textarea>
                            </div>

                            <div class="col-lg-6">
                                <label for="seoDesc" class="form-label">SEO Description</label>
                                <textarea name="seoDesc" class="form-control" value="@Model.seoDesc" placeholder="Enter About Temple" rows="3">@Model.seoDesc</textarea>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-danger px-5">Update</button>
                            </div>
                            <div class="col-12">
                                <a href="~/Admin/AddTemple" class="btn btn-success px-5">Cancle</a>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
