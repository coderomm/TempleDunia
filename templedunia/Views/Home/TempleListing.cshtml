@model IEnumerable<templedunia.Models.TempleListing>

@{
    ViewBag.Title = "Temple Listings";
}

<section class="hero-wrap hero-wrap-2 d-flex justify-content-start align-items-center" style="background-image: url('../Content/images/listing_bnrimg2.jpg');">
    @*<div class="overlay"></div>*@
    <div class="container">
        <div class="row">
            <div class="col-lg-2 d-none d-md-block"></div>
            <div class="col-lg-6 col-12" style="margin-bottom:9rem;">
                <h3 class="hindiTitle" style="font-weight:700;color:#555;">ॐ तत्‌ सत्‌</h3>
                <h1 class="" style="color:#555;">ॐ लोकाः समस्ताः सुखिनो भवंतु</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 heading-section text-center mb-5" data-aos="fade-up" data-aos-duration="1000">
                <span class="subheading">Explore the holy lands of Hinduism, begin your pilgrimage – Temples You Should Not Miss on Your Spiritual Journey</span>
                <h2 class="mb-4">DISCOVER OVER 100,000 HINDU TEMPLES</h2>
            </div>
        </div>
        <div class="row">

            @foreach (var Model in Model)
            {
                <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1000">
                    <div class="listing-wrap">

                        <a href="@Url.RouteUrl("turl",new { Id = @Model.Id })" class="img img-property d-flex align-items-center justify-content-center" style="background-image: url(Content/assets/Images/TempleImages/@Model.image1);">
                            <div class="icon d-flex align-items-center justify-content-center">
                                <i class="fa fa-search"></i>
                            </div>
                        </a>
                        <div class="text text-center">
                            <div class="icon d-flex align-items-center justify-content-center">
                                <span class="flaticon-amusement-park"></span>
                            </div>
                            <span class="subheading">View more</span>
                            <h3><a href="@Url.RouteUrl("turl",new { Id = @Model.Id })">@Model.name</a></h3>
                            <ul class="">
                                <li>
                                    <p style="text-align:justify;">
                                        @Html.Raw(Model.detail)
                                    </p>
                                </li>
                            </ul>
                            <div class="info-wrap2 d-flex align-items-center">
                                <p class="heart">
                                    <a href="@Url.RouteUrl("turl",new { Id = @Model.Id })" class="d-flex align-items-center justify-content-center"><i class="fa fa-map-marker"></i></a>
                                </p>

                                <p class="review">
                                    <span class="rev">
                                        <small>
                                            @foreach (var s in ViewBag.slist[Model.Id])
                                            {
                                                <small> @s.StateName ,</small>
                                            }
                                            @foreach (var d in ViewBag.dlist[Model.Id])
                                            {
                                                <small> @d.DistrictName ,</small>
                                            }
                                            @foreach (var c in ViewBag.clist[Model.Id])
                                            {
                                                <small> @c.CityName</small>
                                            }
                                        </small>
                                    </span>
                                </p>


                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>